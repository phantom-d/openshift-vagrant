[OSEv3:children]
masters
nodes
etcd

[OSEv3:vars]
containerized=true
ansible_ssh_user=root

openshift_master_identity_providers=[{'name': 'htpasswd_auth', 'login': 'true', 'challenge': 'true', 'kind': 'HTPasswdPasswordIdentityProvider', 'filename': '/etc/origin/master/htpasswd'}]

openshift_release=__VERSION__
openshift_image_tag=__VERSION__

openshift_hostname=__WEBCONSOLE__
openshift_public_hostname=__WEBCONSOLE__
openshift_master_default_subdomain=__WEBAPPS__

openshift_master_cluster_public_hostname=__WEBCONSOLE__
openshift_master_cluster_public_vip=__WEBCONSOLEIP__

openshift_override_hostname_check=true
openshift_deployment_type=origin
openshift_hosted_metrics_deploy=false

# apply updated node defaults
openshift_node_kubelet_args={'pods-per-core': ['10'], 'max-pods': ['250'], 'image-gc-high-threshold': ['90'], 'image-gc-low-threshold': ['80']}

[masters]
__WEBCONSOLE__

[etcd]
__WEBCONSOLE__

[nodes]
__WEBCONSOLE__ openshift_node_labels="{'region': 'infra', 'zone': 'default'}"
__WEBNODE__ openshift_node_labels="{'region': 'development', 'zone': 'east'}"
